@model IEnumerable<Financas.Dominio.Despesa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPagamentoEsperado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDespesa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPagamentoEsperado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDespesa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DespesaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DespesaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DespesaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
