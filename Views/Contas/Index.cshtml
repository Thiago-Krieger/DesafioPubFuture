@model IEnumerable<Financas.Dominio.Conta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroConta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoConta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstituicaoFinanceira)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstituicaoFinanceira)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
